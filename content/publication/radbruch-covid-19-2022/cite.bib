 journal = {Forum},
 keywords = {Emotional stress, Emotionaler Stress, Grief, Pandemics, Pandemie, Psychosocial factors, Psychosoziale Faktoren, Social isolation, Soziale Isolierung, Trauer},
 language = {de},
